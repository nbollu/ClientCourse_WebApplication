@model ClientCourse_WebApplication.Models.ClientModel

@{
    Layout = null;
}
<link href="@Url.Content("~/content/bootstrap.css")" rel="stylesheet" type="text/css" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Client Courses</title>
</head>
<body>
    <div style="margin: 0 auto; width:550px;">
        <h4>Client Details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Client Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

        </dl>
    </div>
    <div id="centered" style="margin: 0 auto; width:550px;">
        <table class="table table-striped table-bordered table-sm">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Courses)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Courses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", "Course", new { id = item.Id }, null)
                    </td>
                </tr>
            }

        </table>
    </div>
    <div style="margin: 0 auto; width:550px;">
        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</body>
</html>
