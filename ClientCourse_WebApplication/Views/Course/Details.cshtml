@model ClientCourse_WebApplication.Models.CourseModel

@{
    Layout = null;
}
<link href="@Url.Content("~/content/bootstrap.css")" rel="stylesheet" type="text/css" />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Client Courses</title>
</head>
<body>

    <div style="margin: 0 auto; width:550px;">
        <h4>Course Details</h4>
        <hr />
        <dl class="dl-horizontal">


            <dt>
                @Html.DisplayNameFor(model => model.CourseName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CourseName)
            </dd>

        </dl>

    </div>
    <div id="centered" style="margin: 0 auto; width:550px;">
        <table class="table table-striped table-bordered table-sm">
            <tr>
                <th>
                    User ID
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Registartion DateTime
                </th>
            </tr>

            @foreach (var item in Model.Registrations)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegistartionDateTime)
                    </td>
                </tr>
            }

        </table>
    </div>
    <div style="margin: 0 auto; width:550px;">
        <p>
            @Html.ActionLink("Back to List", "Details", "Client", new { id = Model.PortalId }, null)
        </p>
    </div>
</body>
</html>
